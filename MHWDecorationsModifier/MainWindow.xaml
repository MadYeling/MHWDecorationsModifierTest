<Window x:Class="MHWDecorationsModifier.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MHWDecorationsModifier"
        mc:Ignorable="d"
        Title="《怪物猎人：世界》珠子修改器" Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#B6D6FF"
        ResizeMode="CanMinimize">
    <Grid>
        <DockPanel Grid.ColumnSpan="6" HorizontalAlignment="Left" Height="25" LastChildFill="True" Margin="0,0,0,0"
                   VerticalAlignment="Top" Width="800">

            <Menu DockPanel.Dock="Top">
                <MenuItem Header="文件" Width="40" Height="25" FontSize="13">
                    <MenuItem Header="退出程序" Click="Exit_OnClick" />
                </MenuItem>
                <MenuItem Header="帮助" Width="40" Height="25" FontSize="13">
                    <MenuItem Header="教程" Click="Teach_OnClick" />
                    <MenuItem Header="关于" Click="About_OnClick" />
                </MenuItem>
            </Menu>
        </DockPanel>
    </Grid>
</Window>