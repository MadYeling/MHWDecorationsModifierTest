<mah:MetroWindow x:Class="MHWDecorationsModifier.xaml.DecorationChangeWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                 mc:Ignorable="d"
                 Title="DecorationChangeWindow"
                 Height="150" Width="300"
                 WindowStartupLocation="CenterOwner"
                 ResizeMode="NoResize">
    <Canvas>
        <ComboBox Name="SelectDecoration" FontSize="14" Height="30" Width="150" Canvas.Left="10" Canvas.Top="11"
                  HorizontalAlignment="Center" VerticalAlignment="Top" />
        <Label Content="数量：" FontSize="14" Canvas.Left="167" Canvas.Top="14" HorizontalAlignment="Center"
               VerticalAlignment="Top" />
        <TextBox Name="DecorationNumber" Height="30" Width="80" Canvas.Left="210" Canvas.Top="13"
                 HorizontalAlignment="Center" VerticalAlignment="Top" />
        <Button Name="Submit" Content="确定修改" Click="Submit_OnClick" FontSize="14" Height="40" Width="110" Canvas.Left="177" Canvas.Top="62"
                HorizontalAlignment="Left" VerticalAlignment="Center" />
    </Canvas>
</mah:MetroWindow>