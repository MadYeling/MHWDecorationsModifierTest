<UserControl x:Class="MHWDecorationsModifier.xaml.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MHWDecorationsModifier"
             xmlns:xaml="clr-namespace:MHWDecorationsModifier.xaml"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="80">
    <Grid>

        <Border BorderBrush="#FFE697EA" BorderThickness="1" HorizontalAlignment="Left" Height="80" VerticalAlignment="Top" Width="80"/>

        <Label Content="{Binding DecorationName, RelativeSource={RelativeSource AncestorType={x:Type xaml:UserControl1}, Mode=FindAncestor}}" 
               Margin="10,10,0,0" VerticalAlignment="Top" FontSize="16" HorizontalAlignment="Left" Width="60"/>
        <Label Content="数量：" HorizontalAlignment="Left" Margin="10,45,0,0" VerticalAlignment="Top" Width="38.666"/>
        <Label Content="{Binding DecorationNumber, RelativeSource={RelativeSource AncestorType={x:Type xaml:UserControl1}, Mode=FindAncestor}}" HorizontalAlignment="Left" Margin="40,45,-9.263,0" VerticalAlignment="Top" Width="49.263"/>

    </Grid>
</UserControl>
